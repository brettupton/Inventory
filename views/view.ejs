<!DOCTYPE html>

<html>
    <head>
        <title>RamTech ASIR</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
        rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" 
        crossorigin="anonymous">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans&display=swap" rel="stylesheet">
        <link rel="icon" href="https://vcu.edu/media/vcu/assets/images/favicons/favicon.ico" type="image/x-icon">
        <link href="/stylesheets/style.css" rel="stylesheet" type="text/css">
    </head>
    <header class="bg-warning">
        <ul class="nav justify-content-end">
            <li class="nav-item">
                <a class="nav-link link-dark" href="/">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link link-dark" href="./view.html">View Full Inventory List</a>
            </li>
            <li class="nav-item">
                <a class="nav-link link-dark" href="./create.html">Create New Report</a>
            </li>
        </ul>
    </header>
    <body class="bg-dark text-white">
        <div class="container-fluid">
            <div class="row my-4">
                <div class="col-10">
                    <h1><span style="color: #ffc107">RAM</span>TECH INVENTORY</h1>
                </div>
            </div>
            <div class="row justify-content-end my-0">
                <div class="col-1">
                    <button class="btn btn-success">Add Item</button>
                </div>
            </div>
        </div>
        <div class="table-wrapper-scroll-y scrollbar">
            <table class="table table-dark table-striped table-sm table-hover">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Product</th>
                        <th scope="col">Part Number</th>
                        <th scope="col">UPC</th>
                        <th scope="col">Quantity</th>  
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <% let num = 0 %>
                    <% dataArray.forEach(function(item) { %>
                        <% num++ %>
                        <tr>
                            <td><%= num %></td>
                            <td><%= item.Name %></td>
                            <td><%= item.MPN %></td>
                            <td><%= item.UPC %></td>
                            <td><%= item.Quantity %></td>
                            <td>
                                <button id="<%= num %>" type="submit" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#itemModal">
                                    Update
                                </button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="itemModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title text-black" id="exampleModalLabel">Testing</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <p class="text-black"><%= dataArray[1].Name %></p>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary">Save changes</button>
                </div>
              </div>
            </div>
          </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" 
        crossorigin="anonymous"></script>
    </body>
</html>