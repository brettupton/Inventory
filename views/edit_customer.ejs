<%- include('./partials/messages') %>
<div class="container my-5">
    <div class="row text-center">
        <h1><span style="color: #ffc107">RAM</span>TECH EDIT ORDER</h1>
    </div>
</div>

<div class="container w-50">
    <div class="row">
        <div class="col">
            <form method="POST" action="/orders/newCustomer" class="form-control" id="customer-form">
                <div class="row my-3">
                    <div class="col">
                        <div class="form-floating">
                            <input type="text" class="form-control" name="name" value="<%=customer.name %>" required>
                            <label for="name">Customer Name</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input type="text" class="form-control" name="contactInfo" value="<%=customer.contactInfo %>">
                            <label for="contactInfo">Email/Phone Number</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input type="text" class="form-control" name="address" value="<%=customer.address %>">
                            <label for="address">Address</label>
                        </div>
                    </div>
                </div>
                <div class="row my-3">
                    <div class="col-5">
                        <label class="form-label" for="itemsOrdered" style="color: white">Items Ordered</label>
                        <textarea class="form-control" name="itemsOrdered" rows="3" required><%= customer.itemsOrdered %></textarea>
                    </div>
                    <div class="col">
                        <div class="row mt-5">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="transactionType" value="customer.transactionType">
                                <label for="transactionType" class="form-check-label" style="color: white">Personal?</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="applecare" value="customer.applecare">
                                <label for="applecare" class="form-check-label" style="color: white">AppleCare?</label>
                            </div>
                        </div>
                    </div>
                    <div class="col mt-4">
                        <div class="form-floating">
                            <input type="text" class="form-control" name="bannerIndex" placeholder="123456">
                            <label for="bannerIndex">Banner Index</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-floating">
                            <input type="number" class="form-control" name="registerTransaction" placeholder="1375">
                            <label for="registerTransaction">Transaction #</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input type="date" class="form-control" name="date" placeholder="10/01/1996" required>
                            <label for="date">Date</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input type="string" class="form-control" name="estimatedDelivery" placeholder="2-3 weeks">
                            <label for="estimatedDelivery">Estimated Delivery</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input type="number" class="form-control" name="poNumber" placeholder="111111">
                            <label for="poNumber">PO #</label>
                        </div>
                    </div>
                </div>
                <div class="row my-3">
                    <div class="col-5">
                        <label for="additionalNotes" style="color:white">Additional Notes</label>
                        <textarea class="form-control" name="additionalNotes" rows="3"></textarea>
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Save</button>
            </form>
        </div>
    </div>
</div>