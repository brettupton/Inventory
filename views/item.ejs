<div class="container mt-5" id="item-view">
    <div class="row">
        <div class="col text-center">
            <div class="row my-4">
                <h4><%= item.Name %></h4>
            </div>
            <div class="row">
                <div class="col-3">
                    <img src="<%= item.Image %>" id="icon" /> 
                </div>
                <div class="col-9">
                    <div class="row">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Individual Sold</th>
                                <th scope="col">Institutional Sold</th>
                                <th scope="col">Individual Returned</th>
                                <th scope="col">Institutional Returned</th>
                                <th scope="col">Individual Promotion</th>
                                <th scope="col">Institutional Promotion</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><%= item.IndividualSold %></td>
                                <td><%= item.InstitutionalSold %></td>
                                <td><%= item.IndividualReturned %></td>
                                <td><%= item.InstitutionalReturned %></td>
                                <td><%= item.IndividualPromotion %></td>
                                <td><%= item.InstitutionalPromotion %></td>
                            </tr>
                        </tbody>
                    </table>
                    </div>
                    <div class="row">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">MPN</th>
                                    <th scope="col">UPC</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><%= item.Quantity %></td>
                                    <td><%= item.MPN %></td>
                                    <td><%= item.UPC %></td>   
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="position-absolute bottom-0 start-50 translate-middle-x mb-5">
        <form method="GET" action="/item/view">
            <button type="button" id="arrow-button" onclick="window.location.href='item/view?item=<%= prevUPC %>'">
        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-arrow-left"
            viewBox="0 0 16 16">
            <path fill-rule="evenodd"
                d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
        </svg> 
        </button>
            <select class="minimal" name='item' onchange='if(this.value != 0) { this.form.submit(); }'>
            <option selected value="190199098428">Select an item</option>
            <% dataArray.forEach(item=> { %>
                <option value="<%= item.UPC %>">
                    <%= item.Name %>
                </option>
                <% }) %>
        </select> 
        <button type="button" id="arrow-button" onclick="window.location.href='item/view?item=<%= nextUPC %>'">
        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor"
            class="bi bi-arrow-right" viewBox="0 0 16 16">
            <path fill-rule="evenodd"
                d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
        </svg>
        </button>
        </form>
    </div>
</div>